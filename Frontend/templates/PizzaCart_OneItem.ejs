<div class="pizza-ordered">

                            <img class="pizza-image-list" src="<%=  pizza.icon %>" />
                            <div class="ordered-pizza-name">
                                <p><%= pizza.title %></p>





                                <div class="ordered-size">
                                    <img  class ="pizza-image" src="assets/images/size-icon.svg" />
                                    <% if(size=="small_size"){  %>
                                    <span class="size"><%= pizza.small_size.size %></span>
                                    <span class="weight"><%= pizza.small_size.weight %></span>

<% } %>
                                    <% if(size=="big_size"){ %>
                                    <span class="size"><%= pizza.big_size.size %></span>
                                    <span class="weight"><%=  pizza.big_size.weight %></span>

<% } %>
                                    <img class ="pizza-image"  src="assets/images/weight.svg" />
                                   
                                </div>
                                 <div class="order-text">
                                      
                                     <%  if(size=="small_size"){  %>
                                <span class="ordered-price"><%=  pizza.small_size.price %></span>
<% } %>
                                              <% if(size=="big_size"){  %>
                                <span class="ordered-price"><%= pizza.big_size.price %></span>
<% } %>
                                <a class="btn btn-xs btn-danger subtract-button" href="#">
                                    <span class="glyphicon glyphicon-minus">
                                    </span>
                                </a>
                                <div class="badCounter"><%= quantity %> </div>
                                <a class="btn btn-xs btn-success gradient add-button" href="#">
                                    <span class="glyphicon glyphicon-plus"></span></a>
                                <a class="btn btn-xs btn-default circle-btn delete-button" href="#">
                                    <span class="glyphicon glyphicon-remove"></span></a>
                            </div>


                           </div>     




                        </div>